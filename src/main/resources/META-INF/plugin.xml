<idea-plugin>
    <id>dk.lost_world.intellij-touch</id>
    <name>intellij-touch</name>
    <vendor email="olivernybroe@gmail.com" url="https://github.com/olivernybroe/intellij-touch">Lost-World</vendor>

    <description><![CDATA[
    MacBook Touch bar support for Intellij. <br>
    This project adds some simple buttons for the MacBook touch bar, right now support for customizing is WIP. <br>

    If there is a button you think should be there or want to help develop, just go to the github page.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="dk.lost_world.intellij_touch.TouchBar"/>
    </extensions>

    <actions>
        <group id="TouchBar" class="dk.lost_world.intellij_touch.TouchBarGroup" popup="true"
               text="Touch Bar" description="Extending AnAction Demo">
            <add-to-group group-id="ViewMenu" anchor="first"/>
        </group>

    </actions>

    <project-components>
        <component>
            <implementation-class>dk.lost_world.intellij_touch.TouchBarComponent</implementation-class>
            <interface-class>dk.lost_world.intellij_touch.TouchBarComponent</interface-class>
        </component>
    </project-components>
</idea-plugin>